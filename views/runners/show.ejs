<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs",{title: "Display Runner"}) %>
  <body>
    <%- include("../partials/header.ejs") %>
    <div id="item-container">
      <h2>
        Name: <%=runner.firstName%> <%=runner.lastName%> Age:<%=runner.age%>
      </h2>
      <h2>Pace: <%=runner.pace%></h2>
      <h2>
        Times: Start - <%=runner.startTime%> Finish - <%=runner.finishTime%>
      </h2>
      <a href="/runner/<%=eventId%>/edit/<%=runner._id %>"
        ><button>Edit Runner</button></a
      >
      <form
        action="/runner/<%=eventId%>/<%=runner._id%>?_method=DELETE"
        method="POST"
      >
        <button>Delete</button>
      </form>
    </div>
  </body>
</html>
