<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs",{title: "Display Runner"}) %>
  <body>
    <%- include("../partials/header.ejs") %>
    <div class="container">
      <div class="col-md-3 h1 runner"><%=runner.bib%></div>
      <div class="col-md-3 h2 runner">
        Name: <%=runner.firstName%> <%=runner.lastName%>
      </div>
      <div class="col-md-3 h2 runner">Age:<%=runner.age%></div>

      <div class="col-md-5 h2 runner">
        Pace: <span id="pace"><%=runner.pace%></span>
      </div>
      <div class="row" id="times">
        <div class="col-md-2 h2">Times:</div>
        <div class="col-md-3 h3">Start - <%=runner.startTime%></div>
        <div class="col-md-3 h3">Finish - <%=runner.finishTime%></div>
        <div class="col-md-3 h3">Net time - <%=runner.netTime%></div>
      </div>
      <div class="row">
        <div class="col-md-2 col-sm-1 text-center" id="button">
          <a href="/runner/<%=eventId%>/edit/<%=runner._id %>"
            ><button>Edit Runner</button></a
          >
        </div>

        <div class="col-md-2">
          <form
            action="/runner/<%=eventId%>/<%=runner._id%>?_method=DELETE"
            method="POST"
          >
            <div id="button"><button>Delete</button></div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
